
<div class="row">
	<div class="col-md-7 col-sml-12">
		<%= image_tag @post.post_img.url(:post_show), class:"post-show"%>
	</div>
	<div class="col-md-5 col-sml-12">
		<h2><%= @post.title %></h2>
		<p><%= @post.description %></p>
	</div>
</div>
<br>
<br>


<%= link_to 'Back', root_path, class: "btn btn-default" %>
<% if user_signed_in? %>
<%= link_to 'Edit', edit_post_path(@post), class:"btn btn-default" %>
<%= link_to 'Delete',post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-default" %>
<%end%>